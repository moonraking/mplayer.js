<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/stylesheets/jquery.mobile.structure-1.2.0.min.css" />
    <link rel="stylesheet" href="/stylesheets/blue/blue.css" />
    <link rel="stylesheet" href="/stylesheets/jqm-icon-pack-2.0-original.css" />
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script type="text/javascript" src="/javascripts/jquery-1.8.2.min.js"></script>
    <script type="text/javascript" src="/javascripts/jquery.mobile-1.2.0.min.js"></script>


  </head>
  <body>

    <div data-role="page">
        <h1 data-role="header"><%= title %></h1>
        <div data-role="collapsible-set" id="accordion">
<!-- C O N T R O L S -->
            <div data-role="collapsible" id="controls">
                <% include controls %>
            </div>


<!-- F I L E S -->
            <div data-role="collapsible" data-collapsed="false">
                <% include files %>
            </div>


        </div>
    </div>

<script type="text/javascript">
        <% include controls.js %>
        <% include files.js %>

        function error(error){
            alert(error);
        }

        function format_seconds( secs ){
            var date = new Date(null);
            date.setSeconds(secs);
            return date.toTimeString().substr(0, 8);
        }
</script>

  </body>
</html>